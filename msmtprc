# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# mail
account        mail
host           smtp.mail.org
port           587
from           name@mail.org
user           name
password       mysecretpassword

# Set a default account
account default : mail
